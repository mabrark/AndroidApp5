package com.trios2025dej.androidapp5.viewModel

import android.app.Application
import androidx.lifecycle.AndroidViewModel
import androidx.lifecycle.LiveData
import androidx.lifecycle.MutableLiveData
import androidx.lifecycle.viewModelScope
import com.trios2025dej.androidapp5.model.Episode
import com.trios2025dej.androidapp5.model.Podcast
import com.trios2025dej.androidapp5.repository.PodcastRepo
import kotlinx.coroutines.launch
import java.util.Date

class PodcastViewModel(application: Application) : AndroidViewModel(application) {
      var podcastRepo: PodcastRepo? = null
      var activePodcastViewData: PodcastViewData? = null

      private val _podcastLiveData = MutableLiveData<PodcastViewData?>()
      val podcastLiveData: LiveData<PodcastViewData?> = _podcastLiveData

    data class PodcastViewData(
        var subscribed: Boolean = false,
        val feedTitle: String?,
        val feedUrl: String?,
        val country: String?,
        val imageUrl: String?,
        val episodes: List<EpisodeViewData>
    )

    data class EpisodeViewData(
        val guid: String? = "",
        val title: String? = "",
        val description: String? = "",
        val mediaUrl: String? = "",
        val releaseDate: Date? = null,
        val duration: String? = ""
        )

//    suspend fun getPodcast(summary: PodcastSummaryViewData): PodcastViewData? {
//        val repo = podcastRepo ?: return null
//        val feedUrl = summary.feedUrl ?: return null
//        val podcast = repo.getPodcast(feedUrl)
//        podcast?.feedTitle = summary.name ?: ""
//        podcast?.imageUrl = summary.imageUrl ?: ""
//
//        activePodcastViewData = PodcastViewData(
//            podcast?.feedTitle,
//            podcast?.feedDesc,
//            podcast?.imageUrl
//        )
//        return activePodcastViewData
//    }

    fun getPodcast(podcastSummaryViewData: SearchViewModel.PodcastSummaryViewData) {
        podcastSummaryViewData.feedUrl?.let { url ->
            viewModelScope.launch {
                try {
                    val podcast = podcastRepo?.getPodcast(url)

                    if (podcast != null) {
                        // Use search data for title/image if needed
                        podcast.feedTitle = podcastSummaryViewData.name ?: podcast.feedTitle
                        podcast.imageUrl = podcastSummaryViewData.imageUrl ?: podcast.imageUrl

                        _podcastLiveData.value = podcastToPodcastView(podcast)
                    } else {
                        // Invalid or empty feed
                        _podcastLiveData.value = null
                    }
                } catch (e: Exception) {
                    e.printStackTrace()
                    _podcastLiveData.value = null
                }
            }
        } ?: run {
            // feedUrl was null
            _podcastLiveData.value = null
        }
    }


    private fun podcastToPodcastView(podcast: Podcast): PodcastViewData {
        return PodcastViewData(
            false,
            podcast.feedTitle,
            podcast.feedUrl,
            podcast.country,
            podcast.imageUrl,
            episodesToEpisodesView(podcast.episodes)
        )
    }

    private fun episodesToEpisodesView(episodes: List<Episode>): List<EpisodeViewData>
    {
        return episodes.map {
            EpisodeViewData(
                it.guid,
                it.title,
                it.description,
                it.mediaUrl,
                it.releaseDate,
                it.duration
            )
        }
    }


}